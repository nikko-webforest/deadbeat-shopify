  <div class="db-container">
    <template v-if="article.image">
      <img class="blog-featured-img db-img"
        alt=""
        title=""
        :src="article.image"
        width=""
        height=""
        loading="lazy"/>
    </template>
    <template v-else>
      <img class="blog-featured-img db-img"
        alt=""
        title=""
