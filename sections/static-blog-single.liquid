        </template>
        <div class="db-inner-row">
          <template v-if="article.author">
            <div class="blog-author"
              v-text="article.author">
            </div>
          </template>
          <template v-if="article.published_at">
            <svg class="svg-icon-dash-line db-svg"
              width="27"
              height="1"
              viewBox="0 0 27 1"
              fill="none"
              xmlns="http://www.w3.org/2000/svg">
              <line id="line_01"
                x1="0.4375"
                y1="0.5"
                x2="27"
                y2="0.5"
                stroke="#FFFFFF">
              </line>
            </svg>
            <div class="blog-date-post"
              v-text="article.published_at">
            </div>
          </template>
        </div>
