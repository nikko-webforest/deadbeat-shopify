              imageMB: "{{ 'About-Us__asset-mb-natives-v01.png' | asset_url }}",
              property: 'firstNative'
            },
            {
              name: 'CHAZ NITELY',
              description: 'Late night talk-show host whose topics often center around Apocalypse Conspiracy Theories, Alien Encounters, and Government Cover-ups. Chaz has a huge following as well as a huge ego that barely fits into the rundown studio.',
              imageDS: "{{ 'About-Us__asset-natives-v02.png' | asset_url }}",
              imageMB: "{{ 'About-Us__asset-mb-natives-v02.png' | asset_url }}",
              property: 'secondNative'
            },
            {
              name: 'HARMONY BRIGGS',
              description: 'The new-to-town station programmer. Harmony is a somewhat mysterious and enigmatic figure that’s breathed a new life into the musty radio station as well as Roger.',
              imageDS: "{{ 'About-Us__asset-natives-v03.png' | asset_url }}",
              imageMB: "{{ 'About-Us__asset-mb-natives-v03.png' | asset_url }}",
              property: 'thirdNative'
            },
            
          ]
        },
        settingSlider: {
          firstCardWidth:null,
          isDragging: false,
          isAutoPlay: true,
          startX:null,
          startScrollLeft:null,
        },
        timeoutId:null,
        isMobile: false,
        sliderX1440: false,
        sliderX1080: false,
        sliderX768: false,
        isRender: false,
        windowSize: window.innerWidth,
      }
    },
    computed: {
      appearButton() {
          if (this.windowSize >= 1440 && this.data.listOfCharacters.length <= 3) {
            return false;
          } else if (this.windowSize >= 1080 && this.data.listOfCharacters.length <= 2) {
            return false;
          } else if (this.windowSize >= 768 && this.data.listOfCharacters.length === 1) {
            return false;
          } else {
            return true;
          }
      },
    },
    created() {

      if (window.innerWidth <= 768) {
        this.isMobile = true
      } else{
        this.isMobile = false
      }

      this.onLoadAnimation();
    },
    mounted() {
      
      const wrapper = this.$refs.wrapper;

      if (window.innerWidth > 768 && this.data.listOfCharacters.length > 0) {
        this.infiniteCards();
      }
      
      // Window Resize
      const handleWindowResize = () => {

        if (window.innerWidth >= 1440 && this.data.listOfCharacters.length > 0 && !this.sliderX1440) {
          console.log(`I am in the 1440px window`);
          this.windowSize = window.innerWidth;
          this.isMobile = false;
          this.sliderX1440 = true;

          if (this.isRender) {
            this.$nextTick(() => {
              // This code will run after the component has re-rendered.
              this.infiniteCards();
              this.isRender = false;
            });
          } else {
            this.infiniteCards();
          }

        } else if (window.innerWidth >= 1080 && this.data.listOfCharacters.length > 0 && !this.sliderX1080) {
          console.log(`I am in the 1080px window`);
          this.windowSize = window.innerWidth;
          this.isMobile = false;
          this.sliderX1080 = true;

          if (this.isRender) {
            this.$nextTick(() => {
              // This code will run after the component has re-rendered.
              this.infiniteCards();
              this.isRender = false;
            });
          } else {
            this.infiniteCards();
          }

        } else if (window.innerWidth > 768 && this.data.listOfCharacters.length > 0 && !this.sliderX768) {
          console.log(`I am in the 768px window`);
          this.windowSize = window.innerWidth;
          this.isMobile = false;
          this.sliderX768 = true;

          if (this.isRender) {
            this.$nextTick(() => {
              // This code will run after the component has re-rendered.
              this.infiniteCards();
              this.isRender = false;
            });
          } else {
            this.infiniteCards();
          }

          //this.isMobile = false;
          //let carousel = this.$refs.carousel;
          //const carouselChildrens = [...carousel.children];
          //let cardPerView = null;

              
          //this.settingSlider.firstCardWidth = carousel.querySelector(".native-card").offsetWidth;

          //cardPerView = Math.round(carousel.offsetWidth / this.settingSlider.firstCardWidth);

          /*
          if (!this.sliderX768) {
              console.log(`I am in 768 duplicate`);
              this.sliderX768 = true;

              this.infiniteCards();
          }
          */

            //carousel.classList.add("no-transition");
            //carousel.scrollLeft = carousel.offsetWidth;
            //carousel.classList.remove("no-transition");
        }

        if (window.innerWidth <= 768) {
            console.log(`I am in the lower window`);
            this.isMobile = true;
            this.sliderX1440 = false;
            this.sliderX768 = false;
            this.sliderX1080 = false; 
            this.isRender = true;   
        }
      }
      const debounce = (func, delay) => {
        let timeoutId;
        return function (...args) {
          clearTimeout(timeoutId);

          timeoutId = setTimeout(() => {
            func.apply(this, args);
          }, delay);
        };
      }
      const debouncedResizeHandler = debounce(handleWindowResize, 100);
      window.addEventListener('resize', debouncedResizeHandler);
    },
    methods:{
      infiniteCards() {
        const carousel = this.$refs.carousel;
        const carouselChildrens = [...carousel.children];
        let cardPerView = Math.round(carousel.offsetWidth / this.settingSlider.firstCardWidth);

        this.settingSlider.firstCardWidth = carousel.querySelector(".native-card").offsetWidth;


        carouselChildrens.slice(-cardPerView).reverse().forEach(card => {
          carousel.insertAdjacentHTML("afterbegin", card.outerHTML);
        });

        carouselChildrens.slice(0, cardPerView).forEach(card => {
          carousel.insertAdjacentHTML("beforeend", card.outerHTML);
        });
        
        
        carousel.classList.add("no-transition");
        carousel.scrollLeft = carousel.offsetWidth;
        carousel.classList.remove("no-transition");
      },
      onLoadAnimation() {
        console.log('onLoadAnimation');
        setTimeout(() => {
          document.querySelector('.db-site-loader').classList.remove('--show');
          // document.querySelector('.db-section--banner').classList.add('--animate-now');
          document.querySelector('.db-header').classList.add('--animate-now');
        }, 3000);
      },
      loopCharacterList() {
					let convertMembers = [...this.data.listOfCharacters];
					let members = [];

					for (person of convertMembers) {
						let nonReactiveCopy1 = Object.assign({}, person);
						let nonReactiveCopy2 = { ...nonReactiveCopy1 };
						let nonReactiveCopy3 = JSON.parse(JSON.stringify(nonReactiveCopy2));
						members.push(nonReactiveCopy3);
					}

					let position = {
						next: true,
						active: false,
						last: false,
					}

          const result = [];
          // Loop through the original array and create inner arrays
          for (let i = 0; i < members.length; i += 3) {
            const innerArray = members.slice(i, i + 3);
            result.push(innerArray);
          }
          

					return result;
			},
      selectActive(index) {
        let slideIndex = 0;
        console.log(index);
        let position = {
						next: true,
						active: false,
						last: false,
				}

        if (index === 0) {
          position = {
            ...position,
            next: false,
						active: true
          }

          return position
        }

        if(index === this.loopCharacterList().length - 1) {

          position = {
            ...position,
            next: false,
						last: true
          }

          return position
        }
				
        return position;
      },
      nativeProperty(property) {

        if (property === 'firstNative') {
          return {
            'firstNative': true
          }
        }

        if (property === 'secondNative') {
          return {
            'secondNative': true
          }
        }

        if (property === 'thirdNative') {
          return {
            'thirdNative': true
          }
        }
      },
      onChangeSlider(arrow) {
        const carousel = this.$refs.carousel;
        if (arrow === 'right') {
          this.inActiveButton = 'right';
            // Width
          carousel.scrollLeft = carousel.scrollLeft + this.settingSlider.firstCardWidth;

        }

        if (arrow === 'left') {
          this.inActiveButton = 'left';
            // Width
          carousel.scrollLeft = carousel.scrollLeft - this.settingSlider.firstCardWidth;
        }
        
      },
      onChangeMbSlider(type) {
        const sliderContainer = this.$refs.sliderContainer;

        if (type === 'left') {
          this.inActiveButton = 'left';
          activateSlider(sliderContainer, 'prev');
        }

        if (type === 'right') {
          this.inActiveButton = 'right';
          activateSlider(sliderContainer, 'next');
        }
      },
      onInfiniteScroll() {
        const carousel = this.$refs.carousel;
        
        // Width
        
        if(carousel.scrollLeft === 0) {
            carousel.classList.add("no-transition");
            carousel.scrollLeft = carousel.scrollWidth - (2 * carousel.offsetWidth);
            carousel.classList.remove("no-transition");
            console.log(`Ending`);
        } else if(Math.ceil(carousel.scrollLeft) === carousel.scrollWidth - carousel.offsetWidth) {
          console.log('very ending');
          carousel.classList.add("no-transition");
          carousel.scrollLeft = carousel.offsetWidth;
          carousel.classList.remove("no-transition");
        }
        

        // Clear existing timeout & start autoplay if mouse is not hovering over carousel
      },
      clearCurTimeout() {
        clearTimeout(this.timeoutId);
      },
      autoPlay() {
        const carousel = this.$refs.carousel;
        if(window.innerWidth < 800 || !this.settingSlider.isAutoPlay) return;

        // if window is smaller than 800 or isAutoPlay is false
        // Autoplay the carousel after every 2500 ms

        this.timeoutId = setTimeout(() => carousel.scrollLeft += this.settingSlider.firstCardWidth, 2500);
      },
      onPreventDrag(event) {
        event.preventDefault();
      }
    }
  }

  Vue.createApp(DB_SF_Page_About_Us_Options).mount('.db-page--about-us')
</script>