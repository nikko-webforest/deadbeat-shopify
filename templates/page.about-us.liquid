<script>

  const activateSlider = (container, type) => {
    const active = container.querySelector('.active');
		const last = container.querySelector('.last');
    const children = [...container.children];
		let next = active.nextElementSibling;
			
		if (!next) {
			next = container.firstElementChild;
		}

		active.classList.remove(['active']);
		last.classList.remove(['last']);
		next.classList.remove(['next']);

		if (type === 'prev') {
			active.classList.add('next');
			last.classList.add('active');
			next = last.previousElementSibling;

			if (!next) {
				next = container.lastElementChild;
			}

			next.classList.remove(['next']);
			next.classList.add('last');
			return;
		}

    if (children.length === 2) {

      console.log("In");
      active.classList.add('last');
      next.classList.add('active');
      return
    }

    active.classList.add('last');
    next.classList.add('active');
    last.classList.add('next');
  }

  const DB_SF_Page_About_Us_Options = {
    name: 'DB SF Page About Us Options',
    data() {
      return {
        inActiveButton: 'right',
        data:{
          listOfCharacters:[
            
            {
              name: 'EVILIA GRIMSHAW',
              description: 'Soul-sucking’ station programmer.  Known lovingly at the station as Little Miss Evil, Evilia’s sarcasm, bottom-line attitude and biting wit often clashes with Roger’s rebellious spirit creating a constant source of comedic conflict.',
