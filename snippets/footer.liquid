<footer class="db-footer site-footer">
  <section class="db-section db-section--newsletter">
    <div class="db-container">
      <div class="db-row">
        <div class="db-col">
          <a class="db-site-link"
            title="Deadbeat"
            href="{{ shop.url }}">
            <img class="db-site-logo db-img"
              alt="Deadbeat"
              title="Deadbeat"
              src="{{ 'DB_Main_logo-v01-264x96.png' | asset_url }}"
              width=""
              height=""
              loading="lazy">
          </a>
          <h4>
            Subscribe to our newsletter
          </h4>
          <p>
            Get updated to our exciting promotions, limited offers, articles and resources.
          </p>
          <form class="db-form--newsletter db-form validate"
            id="mc-embedded-subscribe-form"
            name="mc-embedded-subscribe-form"
            method="post"
            action="https://elevate-m.us21.list-manage.com/subscribe/post?u=c9161b1e17a490930cf29bfcd&amp;id=b779bd68b4&amp;f_id=00fbdce6f0"
            accept-charset="UTF-8"
            target="_blank">
            <div class="db-form-wrap">
              <div class="db-form-group">
                <div aria-hidden="true" style="position: absolute; left: -5000px;">
                  /* real people should not fill this in and expect good things - do not remove this or risk form bot signups */
                  <input type="text" name="b_c9161b1e17a490930cf29bfcd_b779bd68b4" tabindex="-1" value="">
                </div>
              </div>
              <div class="db-form-group">
                <input class="db-form-input required email"
                  id="mce-EMAIL"
                  type="email"
                  name="EMAIL"
                  placeholder=""
                  required=""
                  value=""
                  autocorrect="off"
                  autocapitalize="off">
                <button class="db-btn--form-submit db-btn"
                  id="mc-embedded-subscribe"
                  type="submit"
                  name="subscribe">
                  SUBSCRIBE
                </button>
              </div>
            </div>
            <div id="mce-responses" class="clear foot">
              <div class="response" id="mce-error-response" style="display: none;"></div>
              <div class="response" id="mce-success-response" style="display: none;"></div>
            </div>
          </form>
        </div>
        <div class="db-col">
          <img class="db-img-figure01 db-img"
            alt=""
            title=""
            src="{{ 'DB_Footer_NewsletterFigure01_v01-809x512.png' | asset_url }}"
            width=""
            height=""
            loading="lazy">
        </div>
      </div>
    </div>
  </section>
  <section class="db-section db-section--primary">
    <div class="db-container">
      <div class="db-row">
        <div class="db-col">
          <div class="db-inner-row">
            <a class="db-elevate-link"
              title=""
              href="">
              <img class="db-elevate-logo db-img"
                alt=""
                title=""
                src="{{ 'DB_Elevate_logo-v01-72x81.png' | asset_url }}"
                width=""
                height=""
                loading="lazy">
            </a>
            <p>
              We are a Web3 brand focused on creating the story world and building the story canon with usâ€¦ ON AIR!.
            </p>
          </div>
          <p class="db-copyright">
            &copy; {{ "now" | date: "%Y" }} Deadbeat - All rights reserved
          </p>
        </div>
        <div class="db-col">

          {% if linklists.footer.links.size > 0 %}

            <ul class="db-menu-list">

              {% for menuItem in linklists.footer.links %}

                <li class="db-menu-item">
                  <a class="db-menu-link"
                    title="{{ menuItem.title }}"
                    href="{{ menuItem.url }}">
                    {{ menuItem.title }}
                  </a>
                </li>

              {% endfor %}

            </ul>

          {% endif %}
          
        </div>
        <div class="db-col">
          <h5>
            SOCIALS
          </h5>
          {% render 'socials' %}
        </div>
      </div>
      <p class="db-copyright">
        &copy; {{ "now" | date: "%Y" }} Deadbeat - All rights reserved
      </p>
    </div>
  </section>
</footer>
